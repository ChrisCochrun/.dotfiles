[colors]
;background = ${xrdb:color0:#222}
background = #CC282a36
background-alt = #34353e
;foreground = ${xrdb:color7:#222}
foreground = #a5a5a9
foreground-alt = #e2e4e5
primary = #57c7ff
secondary = #f3f99d
alert = #ff5c57
green= #5af78e

[bar/float]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 60
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

